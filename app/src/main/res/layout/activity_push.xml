<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.didimdol.skt.kimjh.onix.Menu.PushActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/onix_home"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/onix_maintitle"
        android:layout_marginLeft="@dimen/onix_title_left" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_start"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:timePickerMode="spinner"
        />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_finish"
        android:layout_below="@+id/time_start"
        android:layout_centerHorizontal="true"
        android:timePickerMode="spinner"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/texttitle"
        android:text="할인율(%)"
        android:layout_below="@+id/time_finish"
        android:layout_centerHorizontal="true"/>

    <Spinner
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/spin_discount"
        android:spinnerMode="dropdown"
        android:entries="@array/discount"
        android:layout_below="@+id/texttitle"
        android:layout_centerHorizontal="true"/>

   <!-- <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/push_finish"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="부터"
        android:id="@+id/textView16"
        android:layout_above="@+id/time_finish"
        android:layout_toRightOf="@+id/time_start"
        android:layout_toEndOf="@+id/time_start" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="까지"
        android:id="@+id/textView18"
        android:layout_alignBottom="@+id/time_finish"
        android:layout_toRightOf="@+id/time_finish"
        android:layout_toEndOf="@+id/time_finish" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image_push"
        android:background="@drawable/btn_write_b"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />


</RelativeLayout>
