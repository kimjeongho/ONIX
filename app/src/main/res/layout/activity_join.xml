<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/onix_login_bg"
    tools:context="com.didimdol.skt.kimjh.onix.Menu.MenuLogin.JoinActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choiceLayout"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="319dp">


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check_all"
            android:checked="false"
            android:button="@drawable/check_all_selctor"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="70dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이용약관 전체동의"
            android:id="@+id/textView4"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/check_all" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/choiceLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:src="@drawable/box"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/btn_join"
            android:layout_alignStart="@+id/btn_join"
            android:layout_marginTop="12dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check_service"
            android:checked="false"
            android:button="@drawable/check_selctor"
            android:layout_alignTop="@+id/imageView5"
            android:layout_alignLeft="@+id/imageView5"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:src="@drawable/btn_service_ferms"
            android:layout_alignTop="@+id/imageView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check_location"
            android:button="@drawable/check_selctor"
            android:checked="false"
            android:layout_below="@+id/check_service"
            android:layout_alignLeft="@+id/imageView5"
            android:layout_marginLeft="14dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:src="@drawable/btn_position_ferms"
            android:layout_below="@+id/check_service"
            android:layout_alignRight="@+id/imageView6"
            android:layout_marginTop="5dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_join"
            android:background="@drawable/btn_join"
            android:layout_below="@+id/imageView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp" />

    </RelativeLayout>

</RelativeLayout>
