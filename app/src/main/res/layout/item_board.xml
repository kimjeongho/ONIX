<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="73dp"
        android:layout_height="61dp"
        android:id="@+id/image_board"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/onix_512"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="14dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Title Test"
        android:id="@+id/text_title"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/text_id"
        android:layout_alignStart="@+id/text_id"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:text="Id test"
        android:id="@+id/text_id"
        android:layout_below="@+id/text_title"
        android:layout_toRightOf="@+id/image_board" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:text="QnA"
        android:id="@+id/text_cate"
        android:layout_below="@+id/text_title"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <com.github.curioustechizen.ago.RelativeTimeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:text="Time"
        android:id="@+id/text_time"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="|"
        android:textSize="11sp"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/text_id"
        android:layout_toRightOf="@+id/text_id"
        android:layout_toEndOf="@+id/text_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="|"
        android:textSize="11sp"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/text_cate"
        android:layout_toEndOf="@+id/text_cate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:text="ContentTest"
        android:id="@+id/text_content"
        android:layout_below="@+id/text_id"
        android:layout_alignLeft="@+id/text_id"
        android:layout_alignStart="@+id/text_id"
        android:layout_marginTop="7dp"
        android:singleLine="true"
        android:ellipsize="end"
       />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/comment_line"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>