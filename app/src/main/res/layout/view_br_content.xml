<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id ="@+id/board_title_layout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/board_title"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/text_user"
            android:textSize="@dimen/board_text_size"
            android:layout_below="@+id/board_title"
            android:layout_alignLeft="@+id/board_title"
            android:layout_alignStart="@+id/board_title"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:id="@+id/textView12"
            android:layout_alignBottom="@+id/text_user"
            android:layout_toRightOf="@+id/text_user"
            android:layout_toEndOf="@+id/text_user"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/text_categoty"
            android:textSize="@dimen/board_text_size"
            android:layout_alignBottom="@+id/textView12"
            android:layout_toRightOf="@+id/textView12"
            android:layout_toEndOf="@+id/textView12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:id="@+id/textView15"
            android:layout_alignBottom="@+id/text_categoty"
            android:layout_toRightOf="@+id/text_categoty"
            android:layout_toEndOf="@+id/text_categoty"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/text_time"
            android:textSize="@dimen/board_text_size"
            android:layout_alignBottom="@+id/textView15"
            android:layout_toRightOf="@+id/textView15"
            android:layout_toEndOf="@+id/textView15" />

        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:id="@+id/image_del"
            android:background="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView12"
        android:layout_below="@+id/board_title_layout"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="@dimen/board_img_size"
        android:layout_height="@dimen/board_img_size"
        android:id="@+id/image_user"
        android:layout_below="@+id/board_title_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="18dp"
        android:background="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="New Text"
        android:id="@+id/text_content"
        android:textSize="13sp"
        android:layout_below="@+id/image_user"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/onix_title_left"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/onix_title_left"
        android:layout_marginBottom="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="댓글"
        android:id="@+id/textView17"
        android:textSize="14sp"
        android:layout_below="@+id/text_content"
        android:layout_alignLeft="@+id/text_content"
        android:layout_alignStart="@+id/text_content" />

</RelativeLayout>