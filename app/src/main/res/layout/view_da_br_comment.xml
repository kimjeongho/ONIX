<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="userTest"
        android:id="@+id/text_user"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="9sp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="CommentTest"
        android:id="@+id/text_comment"
        android:layout_below="@+id/text_user"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_date"
        android:textSize="9sp"
        android:layout_alignBottom="@+id/text_user"
        android:layout_toRightOf="@+id/text_user"
        android:layout_toEndOf="@+id/text_user"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/comment_line"
        android:layout_below="@+id/text_comment"/>
</RelativeLayout>