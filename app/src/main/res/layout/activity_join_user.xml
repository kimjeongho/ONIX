<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onix_login_bg"
    tools:context="com.didimdol.skt.kimjh.onix.Menu.MenuLogin.JoinUserActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view"
        android:layout_marginTop="319dp">
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_join_email"
        android:layout_gravity="center"
        android:hint="이메일을 입력하세요"
        />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view1"
        android:layout_below="@+id/view"
        android:layout_alignParentLeft="true">
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edit_join_password"
        android:layout_below="@+id/edit_join_email"
        android:layout_alignLeft="@+id/edit_join_email"
        android:layout_alignStart="@+id/edit_join_email"
        android:layout_alignRight="@+id/edit_join_email"
        android:layout_alignEnd="@+id/edit_join_email"
        android:hint="비밀번호를 입력하세요"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view2"
        android:layout_below="@+id/view1"
        android:layout_alignParentLeft="true">
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edit_join_repassword"
        android:layout_below="@+id/edit_join_password"
        android:layout_alignLeft="@+id/edit_join_password"
        android:layout_alignStart="@+id/edit_join_password"
        android:layout_alignRight="@+id/edit_join_password"
        android:layout_alignEnd="@+id/edit_join_password"
        android:hint="비밀번호를 다시 입력하세요"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />
    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_join_finish"
        android:background="@drawable/btn_join"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />
</RelativeLayout>
