<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:id="@+id/artistListView">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/image_artist"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="4dp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView2"
        android:layout_below="@+id/image_artist"
        android:layout_alignLeft="@+id/image_artist"
        android:layout_alignStart="@+id/image_artist"
        android:background="@drawable/onix_icon_48"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number"
        android:id="@+id/text_artistcount"
        android:textSize="13sp"
        android:layout_below="@+id/image_artist"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="artistName"
        android:textSize="14sp"
        android:id="@+id/text_artistname"
        android:layout_alignTop="@+id/image_artist"
        android:layout_alignLeft="@+id/text_content"
        android:layout_alignStart="@+id/text_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/shopName"
        android:textSize="14sp"
        android:id="@+id/text_shopname"
        android:layout_alignTop="@+id/text_artistname"
        android:layout_toRightOf="@+id/text_artistname"
        android:layout_toEndOf="@+id/text_artistname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="artistSort"
        android:textSize="14sp"
        android:id="@+id/text_sort"
        android:layout_alignTop="@+id/text_shopname"
        android:layout_toRightOf="@+id/text_shopname"
        android:layout_toEndOf="@+id/text_shopname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="artistContent"
        android:textSize="14sp"
        android:id="@+id/text_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/text_artistcount"
        android:layout_toEndOf="@+id/text_artistcount"
        android:layout_marginLeft="17dp" />
</RelativeLayout>